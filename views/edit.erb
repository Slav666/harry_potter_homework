<form method="post" action="/students/<%= @student.id %>">

  <label for="first-name">First Name</label>
  <input id="first-name" type="text" name="first_name"
  value = "<%= @student.first_name %>"
  />
  <br><br>

  <label for="last-name">Last Name</label>
  <input id="last-name" type="text" name="last_name"
  value = "<%= @student.last_name %>"
  />
  <br><br>

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">

    <% houses_array = House.all %>
    <% houses_array.each do |house| %>
      <option value="<%=house.id %>"><%=house.name %></option>
    <% end %>

  </select>
  <br><br>

  <label for="student-age">Age</label>
  <input id="student-age" type="number" name="age"
  value = "<%= @student.age %>"
  />
  <br><br>

  <input type="submit" value="Edit Student">

</form>
